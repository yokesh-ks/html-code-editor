---
import { siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<header
  class={cn(
    "flex items-center h-14 z-50 sticky top-0",
    className
  )}
  style="background-color: #192f59;"
>
  <div class="relative container flex items-center justify-between w-full">
    <div class="flex items-center gap-6 md:gap-8 lg:gap-10">
      <a href="/" class="flex items-center space-x-3">
        <span class="font-bold text-white">{siteConfig.name.split('–')[0].trim()} –</span>
        <span class="font-bold" style="color: #fc6;">IngeniousClan</span>
      </a>

      <slot name="mobile-nav-header" />

      <div class="hidden md:flex">
        <slot name="left-header" />
      </div>
    </div>

    <slot name="right-header" />
  </div>
</header>
